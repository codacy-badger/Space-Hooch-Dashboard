// Import all partials
@require './_*.styl'

// font-family: 'Monoton', cursive;
// font-family: 'Open Sans', sans-serif;

body, html
  background-color #FFFFFF
  font-family 'Open Sans', sans-serif
  height 100%

p
  padding 0
  margin 0

#main
  height 100%

.space-hooch
  height 100%
  min-height 100%
  display flex
  flex-direction column

.header
  display flex
  justify-content space-between
  background-color #FFFFFF
  border-bottom 1px solid #CCCCCC

.header__logo
  background-image url(/images/moon.svg)
  background-size 32px
  background-position left center
  background-repeat no-repeat
  display inline-block
  font-family 'Monoton', cursive
  font-size 12px
  text-transform uppercase
  color #0582b0
  padding-top 16px
  padding-bottom 6px
  padding-left 40px
  margin-left 12px

.header__controls
  display flex

.header__controls div
  padding 12px

.header__controls div + div
  border-left 1px solid #CCCCCC
  padding-left 12px
  margin-left 12px

.header__controls, .header__controls input
  font-size 12px

.header__controls input[type="text"], .header__controls select
  border 1px solid #CCCCCC
  border-radius 4px
  padding: 3px 4px
  color #666666
  margin-left 4px

.header__controls button
  background-color #FFFFFF
  border none
  padding 3px 4px
  color #666666
  margin 0 4px

.header__controls button[type="submit"]
  background-color #0582b0
  border-radius 4px
  padding 3px 4px
  color #FFFFFF
  margin 0 4px

.content
  flex 1
  background-color #ECECEC
  display flex
  flex-wrap wrap
  justify-content center

.satellite
  background-image url(/images/satellite.svg)
  background-repeat no-repeat
  background-size 64px
  background-position center 10px
  border-radius 12px
  background-color #FFFFFF
  box-shadow 2px 2px 2px #CCCCCC
  padding 100px 0 0 0
  margin 20px

.barrel
  position relative
  background-image url(/images/barrel.svg)
  background-repeat no-repeat
  background-size 32px
  background-position 4px 4px
  background-color #F7F7F7
  width 320px
  min-height 100px
  border-bottom 1px solid #d8d6d6

.barrel__batch
  border-radius 50%
  background-color #6f97d6
  display inline-block
  font-size 10px
  padding 4px 8px
  position relative
  left -10px
  top -10px

.barrel__batch span
  display none

.barrel__status
  position absolute
  top 10px
  right 10px
  font-size 10px
  text-transform lowercase
  color #333333
  text-align right

.barrel__status--error
  color #A90000

.barrel__status--expired
  color orange

.barrel__status--ready
  color green

.barrel__status span
  color #787878
  margin-right 10px

.barrel__flavor
  text-transform lowercase
  color #333333
  padding 10px
  font-size 14px

.barrel__flavor span
  color #787878
  margin-right 10px

.barrel__error
  background-image url(/images/error.svg)
  background-repeat no-repeat
  background-size 16px
  background-position 4px 4px
  padding 2px 10px 20px 32px
  color #A90000
  font-size 14px
